        <font>
            <Font name="Bell MT" size="30.0" />
        </font>
    </Text>
    <Button defaultButton="true" onAction="#handleCustomer" prefHeight="91.0" prefWidth="156.0" text="Customer" textFill="WHITE">
        <font>
            <Font size="23.0" />
        </font>
    </Button>
    <Button contentDisplay="CENTER" defaultButton="true" graphicTextGap="6.0" onAction="#handleStaff" prefHeight="87.0" prefWidth="150.0" text="Staff" textFill="#f2f3ff">
        <font>
            <Font size="26.0" />
        </font>
    </Button>
</VBox>
